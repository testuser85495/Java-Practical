package pizza;

import java.util.Scanner;

public class main {

	public static void main(String[] args) {
		int small = 150;
		int medium = 250;
		int large = 500;
		int monster = 700;
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("1.Small Pizza");
		System.out.println("2.Medium Pizza");
		System.out.println("3.Large Pizza");
		System.out.println("4.Monster Pizza");
		System.out.println("Select Your Pizza: ");
		
		byte choice = scanner.nextByte();
		
		if (choice >=1  && choice <= 4) {
			if (choice == 1) {
				System.out.println("Small");
				System.out.print("Enter Number of Small Pizza: ");
				byte num = scanner.nextByte();
				int total = small * num;
				System.out.println("total: " + total);
			}
			else if (choice == 2) {
				System.out.println("medium");
				System.out.print("Enter Number of Medium Pizza: ");
				byte num = scanner.nextByte();
				int total = medium * num;
				System.out.println("total: " + total);
			}
			else if (choice == 3) {
				System.out.println("Large");
				System.out.print("Enter Number of Large Pizza: ");
				byte num = scanner.nextByte();
				int total = large * num;
				System.out.println("total: " + total);
			}
			else if (choice == 4) {
				System.out.println("Monster");
				System.out.print("Enter Number of Monster Pizza: ");
				byte num = scanner.nextByte();
				int total = monster * num;
				System.out.println("total: " + total);
			}
		} 
		else {
			System.out.println("Invalid !!!");
		}

	}

}
