package task;

//wajp to find average of all even number from 1 to 500
public class allEven {
	static int averageEven(int n) {
		if (n % 2 != 0) {
			System.out.println("Invalid Input");
			return -1;
		}

		int sum = 0, count = 0;
		while (n >= 2) {

			// count even numbers
			count++;

			// store the sum of even numbers
			sum += n;

			n = n - 2;
		}
		return sum / count;
	}

	public static void main(String[] args){
        int n = 500;
        int count=0;
        int sum=0;
        
        if (n%2==0) {
			while(n>=500){
				count++;
			}
		}
        
    }

}
