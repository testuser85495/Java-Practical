package task;

import java.util.Scanner;

//*****
// ****
//  ***
//   **
//    *
public class patten {

	public static void main(String args[]) {
		Scanner sc = new Scanner(System.in);
		System.out.println("enter num");
		int row = sc.nextInt();
		int count=0;
		if (row % 2 != 0) {
			for (int i = row; i >= 1; i--) {
				count++;
				for (int j = row; j > i; j--) {
					System.out.print(" ");
				}

				for (int k = 1; k <= i; k++) {
					
					if (count < row) {
						System.out.print("*");
					}
					else {
						System.out.print(" ");
					}
//					System.out.print("*");

				}
				System.out.println("");
			}
		}

	}
}
